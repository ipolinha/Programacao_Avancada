#include <stdio.h>

int main (){
	int t_char = sizeof(char); 
	int t_int = sizeof(int) - 2;
	int t_float = sizeof(float); 
	int t_double = sizeof(double); 
	int t_x = 4092;
	int i;
	
	    printf("para o vetor x do tipo char: \n");
	        for (i =1; i<=3; i++)
	        {
	        printf("x + %d  = %d  \n", i, t_x + t_char*i);
	        }
	    printf("\n\n");
	        printf("para o vetor x do tipo int: \n");
	        for (i =1; i<=3; i++)
	        {
	        printf("x + %d  = %d  \n", i, t_x + t_int*i);
	        }
	    printf("\n\n");
	        printf("para o vetor x do tipo float: \n");
	        for (i =1; i<=3; i++)
	        {
	        printf("x + %d  = %d  \n", i, t_x + t_float*i);
	        }
	    printf("\n\n");
	        printf("para o vetor x do tipo double: \n");
	        for ( i =1; i<=3; i++)
	        {
	        printf("x + %d  = %d  \n", i, t_x + t_double*i);
	        }
	return 0;
	}
  saida:
  para o vetor x do tipo char:
x + 1  = 4093
x + 2  = 4094
x + 3  = 4095


para o vetor x do tipo int:
x + 1  = 4094
x + 2  = 4096
x + 3  = 4098


para o vetor x do tipo float:
x + 1  = 4096
x + 2  = 4100
x + 3  = 4104


para o vetor x do tipo double:
x + 1  = 4100
x + 2  = 4108
x + 3  = 4116
//os valores idealizados sÃ£o igual ao do programa
