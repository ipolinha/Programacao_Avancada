#include <stdio.h>
#include <stdlib.h>
#include<time.h>


int cmpfunc (const void * a, const void * b) {
   return ( (int)a - (int)b );
}


int main() {
    int n, i;
    float *x, aux;

    printf("Digite a quantidade de numeros: ");
    scanf("%d", &n);


    x = (float*)malloc(n*sizeof(float));


    srand(time(0));


    for (i=0; i<n; i++){
        //Gerando numeros de 0 a 100 de forma aleatÃ³ria
        x[i] = rand()%100;
    }

    printf("\nValores nao organizados: \n");
    for (i=0; i<n; i++){
        printf("Valor de [%d]: - %.1f", i, x[i]);
        printf("\n");
    }

    qsort(x, n, sizeof(int), cmpfunc);


    printf("\nValores organizados: \n");
    for (i=0; i<n; i++){
        printf("Valor de [%d]: - %.1f", i, x[i]);
        printf("\n");
    }

    free(x);
    return(0);
}
